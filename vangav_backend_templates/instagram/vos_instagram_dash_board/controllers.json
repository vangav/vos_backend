          "optionality": "OPTIONAL"
        },
        {
          "name": "user_emails",
          "type": "EMAIL",
          "is_array": true,
          "optionality": "MANDATORY"
        }
      ],
      "response_type": "JSON",
      "response_params": [
        # an array of users' error logs grouped per-day per-user
      ]
    },

    # GetDailyUsersLogs
    {
      "is_preset": false,
      "name": "GetDailyUsersLogs",
      "type": "GET",
      "request_params": [
        {
          "name": "from_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "MANDATORY"
        },
        {
          "name": "to_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "OPTIONAL"
        },
        {
          "name": "user_emails",
          "type": "EMAIL",
          "is_array": true,
          "optionality": "MANDATORY"
        }
      ],
      "response_type": "JSON",
      "response_params": [
        # an array of users' logs grouped per-day per-user
      ]
    },

    # GetTopPosts
    {
      "is_preset": false,
      "name": "GetTopPosts",
      "type": "GET",
      "request_params": [
        {
          "name": "from_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "MANDATORY"
        },
        {
          "name": "to_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "OPTIONAL"
        }
      ],
      "response_type": "JSON",
      "response_params": [
        # an array of top posts' info grouped by day
      ]
    },

    # GetTopUsers
    {
      "is_preset": false,
      "name": "GetTopUsers",
      "type": "GET",
      "request_params": [
        {
          "name": "from_date",
