{
  "java_package": "com.vangav",
  "check_source": true,
  "throttle": true,
  "validate_param": true,
  "authenticate": true,
  "after_response": true,
  "after_processing": true,
  "default_operations": true,
  "notifications": true,
  "analysis": true,
  "logging": true,
  
  "controllers": [
  
    # GetAnnualRegionalCounters
    {
      "is_preset": false,
      "name": "GetAnnualRegionalCounters",
      "type": "GET",
      "request_params": [
        {
          "name": "from_year",
          "type": "INT",
          "is_array": false,
          "optionality": "MANDATORY"
        },
        {
          "name": "to_year",
          "type": "INT",
          "is_array": false,
          "optionality": "OPTIONAL"
        },
        {
          "name": "regions",
          "type": "ALPHA_NUMERIC_UNDERSCORE",
          "is_array": true,
          "optionality": "MANDATORY"
        }
      ],
      "response_type": "JSON",
      "response_params": [
        # an array of annual regional counters grouped per-year per-region
      ]
    },

    # GetDailyRegionalCounters
    {
      "is_preset": false,
      "name": "GetDailyRegionalCounters",
      "type": "GET",
      "request_params": [
        {
          "name": "from_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "MANDATORY"
        },
        {
          "name": "to_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "OPTIONAL"
        },
        {
          "name": "regions",
          "type": "ALPHA_NUMERIC_UNDERSCORE",
          "is_array": true,
          "optionality": "MANDATORY"
        }
      ],
      "response_type": "JSON",
      "response_params": [
        # an array of daily regional counters grouped per-day per-region
      ]
    },

    # GetDailyRequestsCounters
    {
      "is_preset": false,
      "name": "GetDailyRequestsCounters",
      "type": "GET",
      "request_params": [
        {
          "name": "from_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "MANDATORY"
        },
        {
          "name": "to_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "OPTIONAL"
        },
        {
          "name": "controllers",
          "type": "ALPHA_NUMERIC_UNDERSCORE",
          "is_array": true,
          "optionality": "MANDATORY"
        }
      ],
      "response_type": "JSON",
      "response_params": [
        # an array of daily requests counters grouped per-day per-controller
      ]
    },

    # GetHourlyRequestsCounters
    {
      "is_preset": false,
      "name": "GetHourlyRequestsCounters",
      "type": "GET",
      "request_params": [
        {
          "name": "from_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "MANDATORY"
        },
        {
          "name": "to_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "OPTIONAL"
        },
        {
          "name": "from_hour",
          "type": "INT",
          "is_array": false,
          "optionality": "MANDATORY"
        },
        {
          "name": "to_hour",
          "type": "INT",
          "is_array": false,
          "optionality": "OPTIONAL"
        },
        {
          "name": "controllers",
          "type": "ALPHA_NUMERIC_UNDERSCORE",
          "is_array": true,
          "optionality": "MANDATORY"
        }
      ],
      "response_type": "JSON",
      "response_params": [
        # an array of daily requests counters grouped per-day per-hour per-controller
      ]
    },

    # GetHourlyControllersErrorLogs
    {
      "is_preset": false,
      "name": "GetHourlyControllersErrorLogs",
      "type": "GET",
      "request_params": [
        {
          "name": "from_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "MANDATORY"
        },
        {
          "name": "to_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "OPTIONAL"
        },
        {
          "name": "from_hour",
          "type": "INT",
          "is_array": false,
          "optionality": "MANDATORY"
        },
        {
          "name": "to_hour",
          "type": "INT",
          "is_array": false,
          "optionality": "OPTIONAL"
        },
        {
          "name": "controllers",
          "type": "ALPHA_NUMERIC_UNDERSCORE",
          "is_array": true,
          "optionality": "MANDATORY"
        }
      ],
      "response_type": "JSON",
      "response_params": [
        # an array of controllers' error logs grouped per-day per-hour per-controller
      ]
    },

    # GetDailyUsersErrorLogs
    {
      "is_preset": false,
      "name": "GetDailyUsersErrorLogs",
      "type": "GET",
      "request_params": [
        {
          "name": "from_date",
          "type": "DATE",
          "is_array": false,
          "optionality": "MANDATORY"
        },
        {
          "name": "to_date",
          "type": "DATE",
